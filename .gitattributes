# Set default behaviour, normalize line endings
* text=auto

# Git LFS: todos los assets pesados están en assets/ (ej. assets/poni)
assets/** filter=lfs diff=lfs merge=lfs -text

# Normalizar finales de línea por tipo de archivo:
# - Scripts POSIX: LF
# - Configs, dotfiles y markdown: LF
# - Windows scripts: CRLF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf
*.conf text eol=lf
*.properties text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.tmux.conf text eol=lf
*.twmrc text eol=lf
*.xresources text eol=lf
*.xinitrc text eol=lf
*.xmodmap text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
