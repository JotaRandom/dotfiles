# Set default behaviour, normalize line endings
* text=auto
# Treat binaries in assets/poni with Git LFS
assets/poni/**.png filter=lfs diff=lfs merge=lfs -text
assets/poni/**.gif filter=lfs diff=lfs merge=lfs -text
assets/poni/**.xcf filter=lfs diff=lfs merge=lfs -text
assets/poni/**.jpg filter=lfs diff=lfs merge=lfs -text
assets/poni/**.jpeg filter=lfs diff=lfs merge=lfs -text
# Keep script files with LF endings on all platforms
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
assets/poni/*.gif filter=lfs diff=lfs merge=lfs -text
assets/poni/*.xcf filter=lfs diff=lfs merge=lfs -text
assets/poni/*.jpg filter=lfs diff=lfs merge=lfs -text
assets/poni/*.jpeg filter=lfs diff=lfs merge=lfs -text
assets/poni/*.png filter=lfs diff=lfs merge=lfs -text
assets/poni/** filter=lfs diff=lfs merge=lfs -text
