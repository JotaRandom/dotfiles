# labwc theme - Windows 95/98 Style
# Path: ~/.config/labwc/themerc

# ===== WINDOW BORDERS =====
# Border width
border.width: 2

# ===== TITLE BAR =====
window.active.title.bg.color: #000080
window.inactive.title.bg.color: #808080

window.active.label.text.color: #FFFFFF
window.inactive.label.text.color: #C0C0C0

window.label.text.justify: left

# Title bar height
window.active.title.bg: flat
window.inactive.title.bg: flat

# ===== TITLE BAR BUTTONS =====
# Button colors (minimize, maximize, close)
window.active.button.unpressed.image.color: #000000
window.active.button.hover.image.color: #000000
window.active.button.pressed.image.color: #FFFFFF

window.inactive.button.unpressed.image.color: #808080
window.inactive.button.hover.image.color: #000000

# Button backgrounds
window.active.button.unpressed.bg.color: #C0C0C0
window.active.button.hover.bg.color: #DFDFDF
window.active.button.pressed.bg.color: #808080

window.inactive.button.unpressed.bg.color: #C0C0C0
window.inactive.button.hover.bg.color: #DFDFDF

# ===== WINDOW DECORATIONS =====
# 3D beveled effect for window borders (Windows 95 style)
# Active window: white highlight on top/left, dark shadow on bottom/right
window.active.border.color: #000000

# Inactive window: same border style
window.inactive.border.color: #000000

# Handle (resize grip)
window.active.handle.bg.color: #C0C0C0
window.inactive.handle.bg.color: #C0C0C0

# ===== MENU =====
menu.border.width: 1
menu.border.color: #000000

menu.title.bg.color: #000080
menu.title.text.color: #FFFFFF
menu.title.text.justify: left

menu.items.bg.color: #C0C0C0
menu.items.text.color: #000000
menu.items.active.bg.color: #000080
menu.items.active.text.color: #FFFFFF

# ===== OSD (On-Screen Display) =====
osd.bg.color: #C0C0C0
osd.border.width: 1
osd.border.color: #000000
osd.label.text.color: #000000

# ===== PADDING =====
padding.width: 4
padding.height: 3

# ===== FONT =====
# Windows 95 used MS Sans Serif, closest alternatives:
# - DejaVu Sans (modern, clean)
# - Liberation Sans (metrics-compatible with Arial)
window.label.text.font: DejaVu Sans Bold:size=11
menu.items.font: DejaVu Sans Bold:size=11
menu.title.font: DejaVu Sans Bold:size=11
osd.label.font: DejaVu Sans Bold:size=11
