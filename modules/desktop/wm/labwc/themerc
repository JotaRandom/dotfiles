# labwc theme - Windows 95/98 Style
# Path: ~/.config/labwc/themerc

# ===== WINDOW BORDERS =====
# Border width
border.width: 2

# ===== TITLE BAR =====
window.active.title.bg.color: #0A246A
window.active.title.bg.colorTo: #A6CAF0
window.inactive.title.bg.color: #808080
window.inactive.title.bg.colorTo: #C0C0C0

window.active.label.text.color: #FFFFFF
window.inactive.label.text.color: #D4D0C8

window.label.text.justify: left

# Title bar height
window.active.title.bg: gradient horizontal
window.inactive.title.bg: gradient horizontal

# ... (Buttons and Borders remain similar but adjusted for 3D feel) ...

# ===== MENU =====
menu.border.width: 1
menu.border.color: #D4D0C8

menu.title.bg.color: #D4D0C8
menu.title.text.color: #000000
menu.title.text.justify: left

menu.items.bg.color: #D4D0C8
menu.items.text.color: #000000
menu.items.active.bg.color: #0A246A
menu.items.active.text.color: #FFFFFF
menu.items.padding.x: 4
menu.items.padding.y: 2
menu.overlap.x: 0
menu.overlap.y: 0

# ===== OSD (On-Screen Display) =====
osd.bg.color: #C0C0C0
osd.border.width: 1
osd.border.color: #000000
osd.label.text.color: #000000

# ===== PADDING =====
padding.width: 4
padding.height: 3

# ===== FONT =====
# Windows 95 used MS Sans Serif, closest alternatives:
# - DejaVu Sans (modern, clean)
# - Liberation Sans (metrics-compatible with Arial)
window.label.text.font: DejaVu Sans Bold:size=11
menu.items.font: DejaVu Sans Bold:size=11
menu.title.font: DejaVu Sans Bold:size=11
osd.label.font: DejaVu Sans Bold:size=11
