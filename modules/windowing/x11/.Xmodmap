# ~/.Xmodmap
# Teclado Español Latinoamericano (LA-Latin1) + compatibilidad DOS/Win95

clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

# Modificadores estándar
add control = Control_L Control_R
add mod1    = Alt_L Alt_R Meta_L
add mod4    = Super_L Super_R

# Layout base LA-Latin1 (preserva ñ, acentos, ¿¡)
keycode   9 = Escape
keycode  10 = 1 exclamdown
keycode  11 = 2 quotedbl at
keycode  12 = 3 numbersign
keycode  13 = 4 dollar
keycode  14 = 5 percent
keycode  15 = 6 ampersand
keycode  16 = 7 slash braceleft
keycode  17 = 8 parenleft bracketleft
keycode  18 = 9 parenright bracketright
keycode  19 = 0 equal braceright
keycode  20 = apostrophe question questiondown
keycode  21 = plus asterisk asciitilde
keycode  22 = BackSpace

keycode  23 = Tab
keycode  24 = q Q
keycode  25 = w W
keycode  26 = e E EuroSign
keycode  27 = r R
keycode  28 = t T
keycode  29 = y Y
keycode  30 = u U
keycode  31 = i I
keycode  32 = o O
keycode  33 = p P
keycode  34 = dead_grave dead_circumflex
keycode  35 = dead_acute dead_diaeresis
keycode  36 = Return

keycode  37 = Control_L
keycode  38 = a A
keycode  39 = s S
keycode  40 = d D
keycode  41 = f F
keycode  42 = g G
keycode  43 = h H
keycode  44 = j J
keycode  45 = k K
keycode  46 = l L
keycode  47 = ntilde Ntilde
keycode  48 = ccedilla Ccedilla
keycode  49 = masculine ordfeminine
keycode  50 = Shift_L

keycode  51 = less greater bar
keycode  52 = z Z
keycode  53 = x X
keycode  54 = c C cent
keycode  55 = v V
keycode  56 = b B
keycode  57 = n N
keycode  58 = m M mu
keycode  59 = comma semicolon
keycode  60 = period colon
keycode  61 = minus underscore
keycode  62 = Shift_R

keycode  63 = KP_Multiply
keycode  64 = Alt_L Meta_L
keycode  65 = space
keycode  66 = Caps_Lock
keycode  67 = F1
keycode  68 = F2
keycode  69 = F3
keycode  70 = F4
keycode  71 = F5
keycode  72 = F6
keycode  73 = F7
keycode  74 = F8
keycode  75 = F9
keycode  76 = F10

# Teclas de navegación (compatibilidad DOS)
keycode 110 = Home
keycode 115 = End
keycode 112 = Prior  ! Page Up
keycode 117 = Next   ! Page Down
keycode 118 = Insert
keycode 119 = Delete

# Teclas especiales
keycode 133 = Super_L
keycode 134 = Super_R
keycode 135 = Menu

add mod4 = Super_L Super_R
