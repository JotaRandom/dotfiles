# htoprc - Configuraci贸n estilo Windows Task Manager
# Para ThinkPad L420

# Campos mostrados (similares a Task Manager de Windows)
fields=0 48 17 18 38 39 40 2 46 47 49 1
# 0=PID 48=Command 17=%CPU 18=%MEM 38=User 39=Time 40=State 2=Nice 46=VSZ 47=RSS 49=IO 1=UID

# Ordenar por CPU (como Task Manager por defecto)
sort_key=46
sort_direction=1

# Configuraci贸n visual
hide_kernel_threads=1
hide_userland_threads=0
shadow_other_users=0
show_thread_names=0
show_program_path=0
highlight_base_name=1
highlight_megabytes=1
highlight_threads=1
highlight_changes=100
highlight_changes_delay=50

# Tree view desactivado inicialmente (como Task Manager)
tree_view=0
tree_view_always_by_pid=0

# Header layout (estilo compacto)
header_layout=two_50_50
header_margin=1

# Mostrar detalles de CPU/Memoria (como en Windows)
show_cpu_usage=1
show_cpu_frequency=1
show_cpu_temperature=1
cpu_count_from_one=0
update_process_names=0

# Delay de actualizaci贸n (1 segundo como Task Manager)
delay=10

# Columnas CPU (mostrar todas)
column_meters_0=LeftCPUs2 Memory Swap
column_meter_modes_0=1 1 1
column_meters_1=RightCPUs2 Tasks LoadAverage Uptime
column_meter_modes_1=1 2 2 2

# Colores (esquema claro tipo Windows)
color_scheme=0

# Habilitar mouse
enable_mouse=1

# Screen tabs
screen_tabs=1

# Detailed CPU time
detailed_cpu_time=0

# Account guest como user normal
account_guest_in_cpu_meter=0

# Configuraci贸n de proceso
strip_exe_from_cmdline=1
