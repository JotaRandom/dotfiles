[user]
	# Datos por defecto del usuario. Puedes rellenarlos o sobreescribirlos en
	# tu configuración local (~/.gitconfig) para mantener tu firma personal.
	name = 
	email = 
	signingkey = 
[commit]
	# Firma GPG por defecto para commits (recomendado si firmas tus commits)
	# gpgsign = true  # comentado para respetar el comportamiento por defecto de Git (ver docs)
[core]
	# Dejar las opciones por defecto de Git (Git 3.0) para minimizar deltas en migración.
	# Editor, excludesfile, autocrlf no están configurados aquí intencionalmente.
[push]
	# push.default seguirá los valores por defecto de Git (evitar sobrescribir para minimizar diferencias)
[color]
	# Activar colores en la salida por defecto
	ui = auto
[alias]
	# Alias comunes para ahorrar tecleo
	st = status
	ci = commit
	br = branch
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
