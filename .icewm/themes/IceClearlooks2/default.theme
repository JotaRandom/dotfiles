ThemeDescription = "IceClearlooks - a port of the 'Clearlooks' Metacity & GTK themes"
ThemeAuthor = "ericmartin & ib"

# used colors (besides appropriate pixmaps):
#
# rgb:86/ab/d9   @selected_bg_color
#
# rgb:1a/1a/1a   @text_color
# rgb:ed/ec/eb   @bg_color
# rgb:f5/f5/b5   @tooltip_bg_color
# rgb:ff/ff/ff   @selected_fg_color, is partly IceWM default (as is @fg_color rgb:00/00/00)
#
# rgb:54/7b/ad   shade(0.70, @selected_bg_color) = darker(@selected_bg_color)
# rgb:6b/6a/6a   shade(0.45, @bg_color)
# rgb:a6/a5/a5   shade(0.70, @bg_color) = darker(@bg_color)
# rgb:d5/d4/d4   shade(0.90, @bg_color)
# rgb:f9/f8/f7   shade(1.05, @bg_color)
# rgb:ff/ff/fe   shade(1.08, @bg_color)
# rgb:ff/00/00   red
# rgb:00/ff/00   green
# rgb:ff/00/ff   fuchsia

